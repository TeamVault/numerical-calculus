  "  are   \n\n\t\t",
  Cell[BoxData[
      RowBox[{
        RowBox[{
          SubscriptBox[
            StyleBox[
              OverscriptBox[
                StyleBox["x",
                  FontWeight->"Bold"], "\[RightVector]"],
              FontWeight->"Bold"], "1"], "[", "t", "]"}], " ", "=", " ", 
        RowBox[{
          RowBox[{
            SubscriptBox[
              StyleBox[
                OverscriptBox[
                  StyleBox["v",
                    FontWeight->"Bold"], "\[RightVector]"],
                FontWeight->"Bold"], 
              "1"], \(\[ExponentialE]\^\(\(\[Lambda]\_1\) t\)\)}], " ", "=", 
          " ", 
          RowBox[{
            RowBox[{"(", GridBox[{
