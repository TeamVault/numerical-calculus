\[IndentingNewLine]", 
    \(\(Print["\<Rcc[h] = \>", Rcc[h]];\)\ \), "\[IndentingNewLine]", 
    \(\(Print["\<Take the limit as h\[Rule]0\>"];\)\), "\[IndentingNewLine]", \

    \(\(Print[\*"\"\<\!\(lim\+\(h \[Rule] 0\)\)\>\"", "\< Rcc[h] = \>", \*"\"\
\<\!\(lim\+\(h \[Rule] 0\)\)\>\"", "\< \>", 
        Rcc[h]];\)\), "\[IndentingNewLine]", 
    \(\(Print[\*"\"\<\!\(lim\+\(h \[Rule] 0\)\)\>\"", "\< Rcc[h] = \>", 
