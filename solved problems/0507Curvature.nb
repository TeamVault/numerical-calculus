  AnimationDisplayTime->0.482681],

Cell[BoxData[{
    \(\(Print["\<y = f[x] = \>", 
        f[x], "\<  at the point {0,0}\>"];\)\), "\[IndentingNewLine]", 
    \(\(Print["\<Radius of the collocation circle\>"];\)\ \ \), "\
\[IndentingNewLine]", 
    \(\(For[i = 1, 
        i \[LessEqual] 
          Length[H], \(i++\), \[IndentingNewLine]\(Print["\<h = \>", 
