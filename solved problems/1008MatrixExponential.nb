Cell[TextData[{
  StyleBox["Example 1.",
    FontWeight->"Bold",
    FontColor->RGBColor[1, 0, 0]],
  "  Consider the matrix  ",
  Cell[BoxData[
      RowBox[{"A", "=", 
        RowBox[{"(", GridBox[{
              {"2", "1"},
              {"1", "2"}
              }], ")"}]}]]],
  ",\n",
  StyleBox["1 (a)",
    FontWeight->"Bold",
    FontColor->RGBColor[1, 0, 0]],
  "  Find  ",
  Cell[BoxData[
      \(\[CapitalPhi]\  = \ \[ExponentialE]\^A\)]],
  ".\n",
  StyleBox["1 (b)",
    FontWeight->"Bold",
    FontColor->RGBColor[1, 0, 0]],
  "  Find  ",
  Cell[BoxData[
      \(\[CapitalPhi] \((t)\)\  = \ \[ExponentialE]\^At\)]],
  "."
}], "Text"],

Cell[CellGroupData[{

Cell[TextData[StyleBox["Solution 1 (a).",
  FontWeight->"Bold",
  FontColor->RGBColor[1, 0, 1]]], "Text"],

Cell[TextData[{
  "We want to find \n\n\t",
  Cell[BoxData[
      \(\[ExponentialE]\^A\  = \ \(I + 
                A\  + \(1\/\(2!\)\) A\^2 + \(1\/\(3!\)\) A\^3 + \(1\/\(4!\)\) 
                  A\^4 +  ... \) + \(1\/\(n!\)\) A\^n +  ... \)]],
  "  \n\nFirst look at some powers   ",
  Cell[BoxData[
      \(A\^i\)]],
  "  "
}], "Text"],

Cell[BoxData[{
    RowBox[{
      RowBox[{
        RowBox[{"A", "=", 
          RowBox[{"(", GridBox[{
                {"2", "1"},
                {"1", "2"}
                }], ")"}]}], ";"}], 
      " "}], "\[IndentingNewLine]", \(For[i = 1, 
        i \[LessEqual] 
          5, \(i++\), \[IndentingNewLine]Print["\<A\>"\^i, "\< = \>", 
          MatrixForm[MatrixPower[A, i]]]];\)}], "Input"],

Cell[TextData[{
  "Now use the calculation   ",
  Cell[BoxData[
      \(A\^i\  = \ p . d\^i . p\^\(-1\)\)]],
  "  "
}], "Text"],

Cell[BoxData[{
    RowBox[{
      RowBox[{"d", "=", 
        RowBox[{"(", GridBox[{
              {"1", "0"},
              {"0", "3"}
              }], ")"}]}], ";"}], "\[IndentingNewLine]", 
    RowBox[{
      RowBox[{"p", "=", 
        RowBox[{"(", GridBox[{
              {\(-1\), "1"},
              {"1", "1"}
              }], ")"}]}], 
      ";"}], "\[IndentingNewLine]", \(pi = 
        Inverse[p];\), "\[IndentingNewLine]", \(For[i = 1, 
        i \[LessEqual] 
          5, \(i++\), \[IndentingNewLine]Print["\<p\>", "\<d\>"\^i, \*"\"\<\!\
\(p\^\(-1\)\)\>\"", "\< = \>", MatrixForm[p], MatrixForm[MatrixPower[d, i]], 
          MatrixForm[pi], "\< = \>", 
          MatrixForm[p . MatrixPower[d, i] . Inverse[p]]]];\)}], "Input"],

Cell[TextData[{
  "Find the expression for the general term   ",
  Cell[BoxData[
      \(A\^n\  = \ p . d\^n . p\^\(-1\)\)]],
  "  "
}], "Text"],

Cell[BoxData[
    \(Print["\<p\>", "\<d\>"\^n, \*"\"\<\!\(p\^\(-1\)\)\>\"", "\< = \>", 
      MatrixForm[p], MatrixForm[MatrixPower[d, n]], 
      MatrixForm[pi], "\< = \>", 
      MatrixForm[p . MatrixPower[d, n] . pi]]\)], "Input"],

Cell[TextData[{
  "Find matrix exponential   ",
  Cell[BoxData[
      \(\[Phi]\  = \ \[ExponentialE]\^A\)]],
  "  will be the sum of the infinite series \n\n",
  Cell[BoxData[
      RowBox[{
        RowBox[{
          RowBox[{"(", "\[NoBreak]", GridBox[{
                {"1", "0"},
                {"0", "1"}
                }], "\[NoBreak]", ")"}], "+", 
          RowBox[{"(", "\[NoBreak]", GridBox[{
                {\(1\/2 + 3\/2\), \(\(-\(1\/2\)\) + 3\/2\)},
                {\(\(-\(1\/2\)\) + 3\/2\), \(1\/2 + 3\/2\)}
                }], "\[NoBreak]", ")"}], "+", 
          RowBox[{\(1\/\(2!\)\), 
            RowBox[{"(", "\[NoBreak]", GridBox[{
                  {\(1\/2 + 3\^2\/2\), \(\(-\(1\/2\)\) + 3\^2\/2\)},
                  {\(\(-\(1\/2\)\) + 3\^2\/2\), \(1\/2 + 3\^2\/2\)}
                  }], "\[NoBreak]", ")"}]}], "+", 
          RowBox[{\(1\/\(3!\)\), 
            RowBox[{"(", "\[NoBreak]", GridBox[{
                  {\(1\/2 + 3\^3\/2\), \(\(-\(1\/2\)\) + 3\^3\/2\)},
                  {\(\(-\(1\/2\)\) + 3\^3\/2\), \(1\/2 + 3\^3\/2\)}
                  }], "\[NoBreak]", ")"}]}], "+", 
          RowBox[{\(1\/\(4!\)\), 
            RowBox[{"(", "\[NoBreak]", GridBox[{
                  {\(1\/2 + 3\^4\/2\), \(\(-\(1\/2\)\) + 3\^4\/2\)},
                  {\(\(-\(1\/2\)\) + 3\^4\/2\), \(1\/2 + 3\^4\/2\)}
                  }], "\[NoBreak]", ")"}]}], "+"}], "..."}]]],
  " "
}], "Text"],

Cell["The sum of the first few terms are:", "Text"],

Cell[BoxData[{\(Clear[n];\), "\[IndentingNewLine]", 
    RowBox[{
      RowBox[{"s", "=", 
        RowBox[{\(\[Sum]\+\(n = 0\)\%4\), 
          RowBox[{\(1\/\(n!\)\), 
            RowBox[{"(", "\[NoBreak]", GridBox[{
                  {\(1\/2 + 3\^n\/2\), \(\(-\(1\/2\)\) + 3\^n\/2\)},
                  {\(\(-\(1\/2\)\) + 3\^n\/2\), \(1\/2 + 3\^n\/2\)}
                  }], "\[NoBreak]", ")"}]}]}]}], 
      ";"}], "\[IndentingNewLine]", \(Print[MatrixForm[s], "\< = \>", 
        MatrixForm[N[s]]];\)}], "Input"],

Cell[BoxData[{
    RowBox[{
      RowBox[{"s", "=", 
