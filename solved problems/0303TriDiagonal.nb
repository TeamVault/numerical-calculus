                  "\[VerticalEllipsis]"},
                {"0", "0", "0", "0", "\[CenterEllipsis]", "\[CenterEllipsis]",
                   "\[CenterEllipsis]", \(a\_\(n - 3\)\), \(d\_\(n - 
                        2\)\), \(c\_\(n - 2\)\), "0"},
                {"0", "0", "0", "0", "\[CenterEllipsis]", "\[CenterEllipsis]",
                   "\[CenterEllipsis]", 
                  "0", \(a\_\(n - 2\)\), \(d\_\(n - 1\)\), \(c\_\(n - 1\)\)},
                {"0", "0", "0", "0", "\[CenterEllipsis]", "\[CenterEllipsis]",
                   "\[CenterEllipsis]", 
                  "0", \(\(\ \)\(0\)\), \(a\_\(n - 1\)\), \(d\_n\)}
                }], ")"}], 
          RowBox[{"(", GridBox[{
                {\(x\_1\)},
                {\(x\_2\)},
                {\(x\_3\)},
                {" "},
                {\(x\_i\)},
                {" "},
                {\(x\_\(n - 2\)\)},
                {\(x\_\(n - 1\)\)},
                {\(x\_n\)}
                }], ")"}]}], " ", "=", " ", 
        RowBox[{"(", GridBox[{
              {\(b\_1\)},
              {\(b\_2\)},
              {\(b\_3\)},
              {" "},
              {\(b\_i\)},
              {" "},
              {\(b\_\(n - 2\)\)},
              {\(b\_\(n - 1\)\)},
              {\(b\_n\)}
              }], ")"}]}]]],
  StyleBox["\n\n",
    FontWeight->"Bold",
    FontColor->RGBColor[1, 0, 1]],
  "A tri-diagonal linear system  ",
  Cell[BoxData[
      RowBox[{
        StyleBox["AX",
          FontWeight->"Bold"], " ", "=", " ", 
        StyleBox["B",
          FontWeight->"Bold"]}]]],
  "  can be written in the form    \n\n(3)\t",
  Cell[BoxData[GridBox[{
          {\(d\_1\ x\_1\), \(\(+\ c\_1\)\ x\_2\), "  ", "  ", "  ", "  ", 
            "  ", "  ", "=", \(b\_\(\(1\)\(\ \ \ \)\)\)},
          {\(a\_1\ x\_1\), \(\(+\ d\_2\)\ x\_2\), \(\(+\ c\_2\)\ x\_3\), "  ",
             "  ", "  ", "  ", "  ", "=", \(b\_\(\(2\)\(\ \ \ \)\)\)},
          {
            "  ", \(\(\ \ \ \)\(a\_2\ x\_2\)\), \(\(+\ d\_3\)\ x\_3\), \(\(+\ 
                c\_3\)\ x\_4\), "  ", "  ", "  ", "  ", 
            "=", \(b\_\(\(3\)\(\ \ \ \)\)\)},
          {"  ", "  ", "  ", "  ", "  ", "  ", "  ", "  ", "  ", "  "},
          {"  ", "  ", "  ", "  ", 
            "  ", \(a\_\(n - 2\)\ x\_\(n - 2\)\), \(\(+\ d\_\(n - 1\)\) 
              x\_\(n - 1\)\), \(\(+\ c\_\(n - 1\)\) x\_n\), 
