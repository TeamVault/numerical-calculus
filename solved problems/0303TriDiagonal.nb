Cell[TextData[{
  StyleBox["Algorithm ",
    FontWeight->"Bold",
    FontColor->RGBColor[0, 0, 1]],
  StyleBox["(tridiagonal linear system).",
    FontFamily->"Times New Roman",
    FontWeight->"Bold",
    FontColor->RGBColor[0, 0, 1]],
  StyleBox["  Solve a tri-diagonal ",
    FontFamily->"Times New Roman"],
  "system  ",
  Cell[BoxData[
      RowBox[{
        StyleBox["AX",
          FontWeight->"Bold"], "=", 
        StyleBox["B",
          FontWeight->"Bold"]}]]],
  "  given in (2-3)",
  StyleBox[".  \n",
    FontFamily->"Times New Roman"],
  "Below diagonal elements:",
  StyleBox["\t",
    FontFamily->"Times New Roman"],
  Cell[BoxData[GridBox[{
          {\(a\_k\), 
            StyleBox["for",
              FontFamily->"Times New Roman",
