  "\n\t\t\nThe fundamental matrix solution  ",
  Cell[BoxData[
      RowBox[{
        OverscriptBox[
          StyleBox["\[CapitalPsi]",
            FontWeight->"Bold"], "\[RightVector]"], "[", "t", "]"}]]],
  "  can be written as"
}], "Text"],

Cell[TextData[{
  "(3)\t\t",
  Cell[BoxData[
      RowBox[{
        RowBox[{
          OverscriptBox[
            StyleBox["\[CapitalPsi]",
              FontWeight->"Bold"], "\[RightVector]"], "[", "t", "]"}], " ", 
